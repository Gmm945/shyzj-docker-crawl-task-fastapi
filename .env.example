# 数据采集任务管理系统环境配置
# =====================================

# 认证配置 - 一键开关认证功能
ENABLE_AUTH=True

# 数据库配置
DATABASE_URL=mysql+aiomysql://app_user:123456@localhost:3306/data_platform
DATABASE_DB_NAME=data_platform

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Celery配置
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# 应用配置
APP_CORS=http://localhost:3000
APP_SECRET_KEY=data-platform-app-secret
APP_FRONT_URI=http://localhost:3000

# 认证相关
ACCESS_TOKEN_EXPIRE_MINUTES=300
SECRET_KEY=data-platform-secret-key
ALGORITHM=HS256

# 管理员配置
ADMIN_PASSWORD=admin123

# 任务配置
MAX_CONCURRENT_TASKS=10
TASK_TIMEOUT=3600
HEARTBEAT_TIMEOUT=300

# 日志配置
LOG_LEVEL=DEBUG
DEBUG=False

# Docker配置
DOCKER_HOST=unix:///var/run/docker.sock

# 文件存储配置
UPLOAD_DIR=./uploads
